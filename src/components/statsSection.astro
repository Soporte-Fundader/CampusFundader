---

import UsersIcon from '../Icons/UsersIcon.astro';
import BookOpenIcon from '../Icons/BookOpenIcon.astro';
import AwardIcon from '../Icons/AwardIcon.astro';
import TrendingUpIcon from '../Icons/TrendingUpIcon.astro';
---

  <section class="py-16 lg:py-20 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="group animate-fade-in-up" style="animation-delay: 0.1s;">
          <div class="w-16 h-16 bg-primary-100 dark:bg-primary-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
            <UsersIcon class="h-8 w-8 text-primary-600 dark:text-primary-400" />
          </div>
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-2">500+</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">Estudiantes Activos</p>
        </div>
        
        <div class="group animate-fade-in-up" style="animation-delay: 0.2s;">
          <div class="w-16 h-16 bg-secondary-100 dark:bg-secondary-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
            <BookOpenIcon class="h-8 w-8 text-secondary-600 dark:text-secondary-400" />
          </div>
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-2">50+</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">Cursos Disponibles</p>
        </div>
        
        <div class="group animate-fade-in-up" style="animation-delay: 0.3s;">
          <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
            <AwardIcon class="h-8 w-8 text-green-600 dark:text-green-400" />
          </div>
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-2">95%</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">Satisfacción</p>
        </div>
        
        <div class="group animate-fade-in-up" style="animation-delay: 0.4s;">
          <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
            <TrendingUpIcon class="h-8 w-8 text-purple-600 dark:text-purple-400" />
          </div>
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-2">85%</h3>
          <p class="text-gray-600 dark:text-gray-300 text-sm">Tasa de Finalización</p>
        </div>
      </div>
    </div>
  </section>