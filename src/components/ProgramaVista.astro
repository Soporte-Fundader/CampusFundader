---
import type { Programa } from '../lib/interfaces/programas';

const { programa } = Astro.props;
---

<section class="max-w-4xl mx-auto p-6 bg-white rounded-xl shadow-md">
  <h1 class="text-2xl font-bold mb-4 text-gray-800">{programa.Tituloprograma}</h1>
  
  <img src={programa.Coverprograma.url} alt="Imagen del programa" class="w-full h-64 object-cover rounded-md mb-4" />

  <p class="text-gray-700 mb-6">{programa.Decripcionprograma}</p>

  <div class="mb-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-2">Objetivos del Programa</h2>
    <ul class="list-disc list-inside space-y-1 text-gray-700">
      {programa.Objetivos.map(obj => (
        <li key={obj.id}>{obj.Objetivosprogama}</li>
      ))}
    </ul>
  </div>

  <div class="mb-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-2">Módulos</h2>
    <ul class="list-disc list-inside space-y-1 text-gray-700">
      {programa.Modulos.map(mod => (
        <li key={mod.id}>{mod.NombreModulo}</li>
      ))}
    </ul>
  </div>

  <div class="mb-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-2">Información del Programa</h2>
    <p><strong>Duración:</strong> {programa.InfoPrograma.Duracion}</p>
    <p><strong>Horario:</strong> {programa.InfoPrograma.HorarioPrograma}</p>
    <p><strong>Modalidad:</strong> {programa.InfoPrograma.Modalidad}</p>
    <p><strong>Sede:</strong> {programa.InfoPrograma.Sede}</p>
  </div>

  <div class="mb-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-2">Encargado</h2>
    <p><strong>Nombre:</strong> {programa.InfoEncargado.NombreEncargadi}</p>
    <p><strong>Coordinador:</strong> {programa.InfoEncargado.CoordinadorPrograma}</p>
    <p><strong>Contacto:</strong> {programa.InfoEncargado.Contactar}</p>
  </div>

  <div class="mb-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-2">Beneficios</h2>
    <p>{programa.BeneficiosPrograma.beneficios}</p>
  </div>
</section>
