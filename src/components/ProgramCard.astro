---
export interface Props {
  id: string;
  name: string;
  shortDescription: string;
  imageUrl: string;
  courseCount: number;
  duration: string;
}

const { id, name, shortDescription, imageUrl, courseCount, duration } = Astro.props;
---

<a href={`/programas/${id}`} class="group block bg-white dark:bg-primary-800 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 overflow-hidden">
  <div class="relative h-48 overflow-hidden">
    <img src={imageUrl} alt={name} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
    <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent flex items-end">
      <h3 class="text-white text-xl font-bold p-4">{name}</h3>
    </div>
  </div>
  <div class="p-4">
    <p class="text-gray-600 dark:text-gray-300 mb-3">{shortDescription}</p>
    <div class="flex justify-between items-center">
      <div class="flex gap-4">
        <span class="text-sm text-primary-600 dark:text-primary-400">{courseCount} cursos</span>
        <span class="text-sm text-primary-600 dark:text-primary-400">{duration}</span>
      </div>
      <span class="text-secondary-500 dark:text-secondary-400 font-medium group-hover:translate-x-1 transition-transform inline-flex items-center">
        Ver programa
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </span>
    </div>
  </div>
</a>