---
export const prerender = true
import Layout from '../layouts/Layout.astro';
import { contentfulClient } from "../lib/contentful";
import type { EntryFieldTypes } from "contentful";


import ClockIcon from '../Icons/ClockIcon.astro';
import AwardIcon from '../Icons/AwardIcon.astro';
import BookOpenIcon from '../Icons/BookOpenIcon.astro';
import ChevronRightIcon from '../Icons/ChevronRightIcon.astro';
import StarIcon from '../Icons/StarIcon.astro';
import UsersIcon from '../Icons/UsersIcon.astro';
import GlobeIcon from '../Icons/GlobeIcon.astro'; 
import SearchIcon from '../Icons/SearchIcon.astro';

// Interfaz para los cursos de Cisco Academy
interface CiscoCourse {
    contentTypeId: "ciscoCourses";
    fields: {
        titulocisco: EntryFieldTypes.Text;
        slugcisco: EntryFieldTypes.Text;
        descisco: EntryFieldTypes.Text;
        shortDescription: EntryFieldTypes.Text;
        imagencisco: EntryFieldTypes.AssetLink;
        difcisco: EntryFieldTypes.Text;
        durationcisco: EntryFieldTypes.Text;
        categorycisco: EntryFieldTypes.Text;
        certificationcisco: EntryFieldTypes.Boolean;
        badgecisco: EntryFieldTypes.Boolean;
        enrollmentCountcisco: EntryFieldTypes.Integer;
        ratingcisco: EntryFieldTypes.Integer;
        prerequisites: EntryFieldTypes.Text;
        learningOutcomes: EntryFieldTypes.Text;
    };
}

// Obtener todos los cursos de Cisco Academy
const { items: allCourses } = await contentfulClient.getEntries<CiscoCourse>({
  content_type: "ciscoCourses",
  order: "-fields.enrollmentCountcisco"
});

// Obtener categorías únicas
const categories = [...new Set(allCourses.map(course => course.fields.categorycisco))].filter(Boolean);
const difficulties = ['Principiante', 'Intermedio', 'Avanzado'];

// Cursos destacados (los primeros 6 por enrollment)
const featuredCourses = allCourses.slice(0, 6);
---

<Layout title="Cisco Networking Academy | Campus Fundader">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 text-white py-20">
    <div class="absolute inset-0 bg-[url('/images/network-pattern.svg')] opacity-10"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="flex items-center justify-center mb-6">
          <div class="w-16 h-16 bg-white/10 rounded-2xl flex items-center justify-center backdrop-blur-sm">
            <GlobeIcon class="h-8 w-8 text-white" />
          </div>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold leading-tight mb-6">
          Cisco Networking Academy
        </h1>
        <p class="text-xl md:text-2xl opacity-90 mb-8 mx-auto">
          Desarrolla habilidades tecnológicas que transforman carreras profesionales con cursos certificados por Cisco
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="#courses" 
            class="inline-flex items-center px-8 py-4 bg-white text-blue-900 font-semibold rounded-xl hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            Explorar Cursos
            <ChevronRightIcon class="ml-2 h-5 w-5" />
          </a>
          <a 
            href="#about" 
            class="inline-flex items-center px-8 py-4 bg-blue-600/20 backdrop-blur-sm border border-white/20 text-white font-semibold rounded-xl hover:bg-blue-600/30 transition-all duration-300"
          >
            Más Información
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
        <div class="group">
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <BookOpenIcon class="h-8 w-8 text-blue-600 dark:text-blue-400" />
          </div>
          <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{allCourses.length}+</h3>
          <p class="text-gray-600 dark:text-gray-300">Cursos Disponibles</p>
        </div>
        <div class="group">
          <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <AwardIcon class="h-8 w-8 text-green-600 dark:text-green-400" />
          </div>
          <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">100%</h3>
          <p class="text-gray-600 dark:text-gray-300">Certificación Oficial</p>
        </div>
        <div class="group">
          <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <UsersIcon class="h-8 w-8 text-purple-600 dark:text-purple-400" />
          </div>
          <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">1000+</h3>
          <p class="text-gray-600 dark:text-gray-300">Estudiantes Activos</p>
        </div>
        <div class="group">
          <div class="w-16 h-16 bg-orange-100 dark:bg-orange-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <GlobeIcon class="h-8 w-8 text-orange-600 dark:text-orange-400" />
          </div>
          <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Global</h3>
          <p class="text-gray-600 dark:text-gray-300">Reconocimiento Mundial</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Courses -->
  {featuredCourses.length > 0 && (
    <section class="py-16 bg-gray-50 dark:bg-gray-900">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            Cursos Destacados
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 mx-auto">
            Los cursos más populares y recomendados de nuestra academia
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredCourses.map((course) => (
            <div class="group bg-white dark:bg-gray-800 rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-200 dark:border-gray-700">
              <div class="relative h-48 overflow-hidden">
                <img 
                  src={course.fields.imagencisco?.fields?.file?.url ?? '/images/cisco-default.jpg'}
                  alt={course.fields.titulocisco}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                <div class="absolute top-4 right-4">
                  <span class={`inline-flex items-center px-3 py-1 rounded-full text-xs font-medium ${
                    course.fields.difcisco === 'Principiante' 
                      ? 'bg-green-100 text-green-800'
                      : course.fields.difcisco === 'Intermedio'
                      ? 'bg-yellow-100 text-yellow-800'
                      : 'bg-red-100 text-red-800'
                  }`}>
                    {course.fields.difcisco}
                  </span>
                </div>
              </div>
              
              <div class="p-6">
                <h3 class="font-bold text-xl text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {course.fields.titulocisco}
                </h3>
                
                <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2">
                  {course.fields.shortDescription || course.fields.descisco}
                </p>

                <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400 mb-4">
                  <div class="flex items-center">
                    <ClockIcon class="w-4 h-4 mr-1" />
                    {course.fields.durationcisco}
                  </div>
                  <div class="flex items-center">
                    <UsersIcon class="w-4 h-4 mr-1" />
                    {course.fields.enrollmentCountcisco || 0}
                  </div>
                </div>

                <div class="flex items-center justify-between mb-6">
                  <div class="flex space-x-3">
                    {course.fields.certificationcisco && (
                      <div class="flex items-center text-sm text-blue-600 dark:text-blue-400">
                        <AwardIcon class="w-4 h-4 mr-1" />
                        Certificación
                      </div>
                    )}
                    {course.fields.badgecisco && (
                      <div class="flex items-center text-sm text-purple-600 dark:text-purple-400">
                        <BookOpenIcon class="w-4 h-4 mr-1" />
                        Insignia
                      </div>
                    )}
                  </div>
                  
                  {course.fields.ratingcisco && (
                    <div class="flex items-center">
                      <StarIcon class="w-4 h-4 text-yellow-400 fill-current" />
                      <span class="text-sm text-gray-600 dark:text-gray-300 ml-1">
                        {course.fields.ratingcisco}
                      </span>
                    </div>
                  )}
                </div>

                <a 
                  href={`/cisco-academy/${course.fields.slugcisco}`}
                  class="block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-xl transition-colors shadow-lg hover:shadow-xl"
                >
                  Ver Curso Completo
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Courses Section -->
  <section id="courses" class="py-16 bg-white dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Todos los Cursos
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mx-auto">
          Explora nuestra completa biblioteca de cursos de networking y tecnología
        </p>
      </div>

      <!-- Filters -->
      <div class="bg-gray-50 dark:bg-gray-700 rounded-2xl p-6 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label for="search" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Buscar cursos
            </label>
            <div class="relative">
              <SearchIcon class="absolute left-3 top-1/2 transform -translate-y-1/2 h-4 w-4 text-gray-400" />
              <input
                type="text"
                id="search"
                placeholder="Buscar por nombre..."
                class="w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
          </div>
          
          <div>
            <label for="category" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Categoría
            </label>
            <select
              id="category"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="">Todas las categorías</option>
              {categories.map(category => (
                <option value={category}>{category}</option>
              ))}
            </select>
          </div>
          
          <div>
            <label for="difficulty" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Dificultad
            </label>
            <select
              id="difficulty"
              class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="">Todas las dificultades</option>
              {difficulties.map(difficulty => (
                <option value={difficulty}>{difficulty}</option>
              ))}
            </select>
          </div>
        </div>
      </div>

      <!-- Courses Grid -->
      <div id="courses-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {allCourses.map((course) => (
          <div 
            class="course-card group bg-white dark:bg-gray-700 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 dark:border-gray-600"
            data-title={course.fields.titulocisco.toLowerCase()}
            data-category={course.fields.categorycisco}
            data-difficulty={course.fields.difcisco}
          >
            <div class="relative h-40 overflow-hidden">
              <img 
                src={course.fields.imagencisco?.fields?.file?.url ?? '/images/cisco-default.jpg'}
                alt={course.fields.titulocisco}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>

              <div class="absolute top-3 right-3">
                <span class={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${
                  course.fields.difcisco === 'Principiante' 
                    ? 'bg-green-100 text-green-800'
                    : course.fields.difcisco === 'Intermedio'
                    ? 'bg-yellow-100 text-yellow-800'
                    : 'bg-red-100 text-red-800'
                }`}>
                  {course.fields.difcisco}
                </span>
              </div>
            </div>

            <div class="p-4">
              <h3 class="font-bold text-gray-900 dark:text-white mb-2 line-clamp-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {course.fields.titulocisco}
              </h3>
              
              <p class="text-sm text-gray-600 dark:text-gray-300 mb-3 line-clamp-2">
                {course.fields.shortDescription || course.fields.descisco}
              </p>

              <div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400 mb-3">
                <div class="flex items-center">
                  <ClockIcon class="w-3 h-3 mr-1" />
                  {course.fields.durationcisco}
                </div>
                <div class="flex items-center">
                  <UsersIcon class="w-3 h-3 mr-1" />
                  {course.fields.enrollmentCountcisco || 0}
                </div>
              </div>

              <div class="flex items-center justify-between mb-4">
                <div class="flex space-x-2">
                  {course.fields.certificationcisco && (
                    <div class="flex items-center text-xs text-blue-600 dark:text-blue-400">
                      <AwardIcon class="w-3 h-3 mr-1" />
                      Cert.
                    </div>
                  )}
                  {course.fields.badgecisco && (
                    <div class="flex items-center text-xs text-purple-600 dark:text-purple-400">
                      <BookOpenIcon class="w-3 h-3 mr-1" />
                      Badge
                    </div>
                  )}
                </div>
                
                {course.fields.ratingcisco && (
                  <div class="flex items-center">
                    <StarIcon class="w-3 h-3 text-yellow-400 fill-current" />
                    <span class="text-xs text-gray-600 dark:text-gray-300 ml-1">
                      {course.fields.ratingcisco}
                    </span>
                  </div>
                )}
              </div>

              <a 
                href={`/cisco-academy/${course.fields.slugcisco}`}
                class="block w-full text-center bg-blue-50 dark:bg-blue-900/20 hover:bg-blue-100 dark:hover:bg-blue-900/40 text-blue-700 dark:text-blue-300 font-medium py-2 px-4 rounded-lg transition-colors text-sm"
              >
                Ver curso
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
          ¿Por qué elegir Cisco Networking Academy?
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-12">
          Cisco Networking Academy es el programa educativo de TI más grande del mundo, 
          que conecta a millones de estudiantes, educadores y empleadores en todo el mundo.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <AwardIcon class="h-8 w-8 text-blue-600 dark:text-blue-400" />
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Certificación Reconocida</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Obtén certificaciones oficiales de Cisco reconocidas mundialmente por empleadores
            </p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <BookOpenIcon class="h-8 w-8 text-green-600 dark:text-green-400" />
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Aprendizaje Práctico</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Experiencia práctica con simuladores y laboratorios virtuales de última generación
            </p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900/30 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <UsersIcon class="h-8 w-8 text-purple-600 dark:text-purple-400" />
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Comunidad Global</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Únete a una comunidad global de profesionales y estudiantes de tecnología
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Course filtering functionality
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('search') as HTMLInputElement;
    const categorySelect = document.getElementById('category') as HTMLSelectElement;
    const difficultySelect = document.getElementById('difficulty') as HTMLSelectElement;
    const courseCards = document.querySelectorAll('.course-card');

    function filterCourses() {
      const searchTerm = searchInput.value.toLowerCase();
      const selectedCategory = categorySelect.value;
      const selectedDifficulty = difficultySelect.value;

      courseCards.forEach(card => {
        const title = card.getAttribute('data-title') || '';
        const category = card.getAttribute('data-category') || '';
        const difficulty = card.getAttribute('data-difficulty') || '';

        const matchesSearch = title.includes(searchTerm);
        const matchesCategory = !selectedCategory || category === selectedCategory;
        const matchesDifficulty = !selectedDifficulty || difficulty === selectedDifficulty;

        if (matchesSearch && matchesCategory && matchesDifficulty) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    }

    searchInput.addEventListener('input', filterCourses);
    categorySelect.addEventListener('change', filterCourses);
    difficultySelect.addEventListener('change', filterCourses);
  });
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>